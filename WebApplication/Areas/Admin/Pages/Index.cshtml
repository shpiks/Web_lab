@model WebApplication.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p class="mt-2">
    <a asp-page="Create" class="btn btn-outline-info">
    <span class="fa fa-plus-circle">
        Добавить</span>
        </a>
 </p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Phone[0].PhoneName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone[0].Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Phone) {
        <tr>
            <td>
            <img src="~/Images/@item.Image" alt="NoImage" width="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.PhoneGroupId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PhoneId" class="btn btn-outline-info">
                <span class="fas fa-edit"></span></a>
                <a asp-page="./Delete" asp-route-id="@item.PhoneId" class="btn btn-outline-danger">
                <span class="fas fa-trash-alt"></span></a>


                @*<a asp-page="./Edit" asp-route-id="@item.PhoneId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PhoneId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PhoneId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
